<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MainPage"
             BackgroundColor="{DynamicResource AppBackgroundColor}"
             Title=""
             NavigationPage.HasNavigationBar="False">


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <SearchBar x:Name="MovieSearchBar"
           Placeholder="Search movies..."
           TextChanged="OnSearch"
           TextColor="White"
           PlaceholderColor="LightGray" />

            <Picker x:Name="GenrePicker"
            Title="Select Genre"
            SelectedIndexChanged="OnGenreSelected"
            WidthRequest="200"/>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="Go to Settings" TextColor="Black" Clicked="OnSettingsClicked" BackgroundColor="Red" BorderColor="Black"/>
                <Button x:Name="SortTitle" Text="Title" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortDirector" Text="Director" Clicked="SortByClicked"  BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortYear" Text="Year" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortRating" Text="Rating" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
            </HorizontalStackLayout>

            <Label 
                x:Name="GreetingLabel"
                Text=""
                FontSize="40"
                TextColor="White"
                HorizontalOptions="Center" />

            <Grid x:Name="GridPageContent" 
                  RowSpacing="10"
                  ColumnSpacing="10"
                  HorizontalOptions="Center"
                  VerticalOptions="Center"
                  >
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>