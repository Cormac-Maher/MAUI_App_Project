<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            Background="DarkGrey">
            <CollectionView x:Name="MoviesCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Padding="10">
                            <Label Text="{Binding title}" FontSize="30" TextColor="White"/>
                            <Label Text="{Binding year}" FontSize="20" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


            <Label 
                x:Name="GreetingLabel"
                FontSize="22"
                TextColor="White"
                HorizontalOptions="Center" />

<!--            <Entry Text="{Binding userName}"/>
            <Button Text="Submit" x:Name="SubmitBtn1" Clicked="EnterName_Clicked"/> -->
            
            <Grid x:Name="GridPageContent" BackgroundColor="DarkGrey"
                HeightRequest="10000" WidthRequest="1500"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
