<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MainPage"
             BackgroundColor="{DynamicResource AppBackgroundColor}"
             Title=""
             NavigationPage.HasNavigationBar="False">


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                x:Name="GreetingLabel"
                Text=""
                FontSize="40"
                TextColor="White"
                HorizontalOptions="Center" />
            
            <Button Text="Emoji Quiz Mode" Clicked="OpenQuiz_Clicked" />
            
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <ImageButton Source="settingsicon.png" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent" Clicked="OnSettingsClicked"  HorizontalOptions="Start"/>
                <SearchBar x:Name="MovieSearchBar" WidthRequest="914" Placeholder="Search movies..." TextChanged="OnSearch" TextColor="White" PlaceholderColor="LightGray"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Picker x:Name="GenrePicker" Title="Select Genre" SelectedIndexChanged="OnGenreSelected" WidthRequest="200"/>
                <Button x:Name="SortTitle" Text="Title" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortDirector" Text="Director" Clicked="SortByClicked"  BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortYear" Text="Year" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortRating" Text="Rating" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <ImageButton x:Name="OnAddMovie"  BorderColor="Black" Source="addicon.png" WidthRequest="60" HeightRequest="60" CornerRadius="30" BackgroundColor="Transparent" HorizontalOptions="End" VerticalOptions="End" Clicked="OnAddMovieClicked"/>
            </HorizontalStackLayout>

            <Grid x:Name="GridPageContent" 
                  RowSpacing="10"
                  ColumnSpacing="10"
                  HorizontalOptions="Center"
                  VerticalOptions="Center" >
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>