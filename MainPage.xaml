<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MainPage"
             BackgroundColor="{DynamicResource AppBackgroundColor}"
             Title=""
             NavigationPage.HasNavigationBar="False">


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label 
                x:Name="GreetingLabel"
                Text=""
                FontSize="40"
                TextColor="White"
                HorizontalOptions="Center" />

            <Button Text="Emoji Quiz Mode" Clicked="OpenQuiz_Clicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black" HorizontalOptions="Fill"/>

            <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10">
                <ImageButton Grid.Column="0" Source="settingsicon.png" 
                         WidthRequest="40" HeightRequest="40" 
                         Clicked="OnSettingsClicked"/>
                <SearchBar Grid.Column="1" x:Name="MovieSearchBar" 
                       Placeholder="Search movies..." 
                       TextChanged="OnSearch" 
                       TextColor="White" />
            </Grid>

            <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10" HorizontalOptions="Fill">
                <Picker Grid.Column="0" x:Name="GenrePicker" Title="Select Genre"  SelectedIndexChanged="OnGenreSelected"  HorizontalOptions="Fill"/>
                <ImageButton Grid.Column="1" x:Name="OnAddMovie" Source="addicon.png" WidthRequest="50" HeightRequest="50" CornerRadius="25" BackgroundColor="Transparent"  BorderColor="Black"  BorderWidth="1" Clicked="OnAddMovieClicked"/>
            </Grid>
            
            <FlexLayout Wrap="Wrap" JustifyContent="SpaceEvenly"  AlignContent="Center"  AlignItems="Center" Direction="Row">
                <Button x:Name="SortTitle" Text="Title" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortDirector" Text="Director" Clicked="SortByClicked"  BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortYear" Text="Year" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
                <Button x:Name="SortRating" Text="Rating" Clicked="SortByClicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
            </FlexLayout>

            <Grid x:Name="GridPageContent" 
                  RowSpacing="10"
                  ColumnSpacing="10"
                  HorizontalOptions="Center"
                  VerticalOptions="Center" >
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
