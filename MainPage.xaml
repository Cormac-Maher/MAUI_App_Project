<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry Text="{Binding MyName}"/>
            <Button Text="Submit" x:Name="SubmitBtn1" Clicked="EnterName_Clicked"/>

            <Grid x:Name="GridPageContent" BackgroundColor="CornflowerBlue"
             HeightRequest="300" WidthRequest="300"
             HorizontalOptions="Center"
             VerticalOptions="Center">
            </Grid>

            <Button
                x:Name="Btn"
                Text="Start Game" 
                Clicked="OnBtnClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
