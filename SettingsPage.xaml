<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.SettingsPage"
             Title="Settings">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Background Color" 
                   FontSize="18" 
                   FontAttributes="Bold"/>
        
        <Picker x:Name="ColorPicker"
                Title="Select a colour"
                SelectedIndexChanged="OnColorSelected">
            <Picker.Items>
                <x:String>DarkSlateGray</x:String>
                <x:String>Black</x:String>
                <x:String>White</x:String>
                <x:String>LightBlue</x:String>
                <x:String>Beige</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Go to Favourites"
                Clicked="OnFavouritesClicked"/>
    </VerticalStackLayout>
</ContentPage>
