<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.AddMoviePage"
             Title=""
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    
    <VerticalStackLayout Padding="20" Spacing="15">
        <Entry x:Name="TitleEntry" Placeholder="Movie Title"/>
        <Entry x:Name="YearEntry" Placeholder="Year" Keyboard="Numeric"/>
        <Entry x:Name="GenreEntry" Placeholder="Genre"/>
        <Entry x:Name="DirectorEntry" Placeholder="Director"/>
        <Entry x:Name="RatingEntry" Placeholder="Rating (0-10)" Keyboard="Numeric"/>
        <Entry x:Name="EmojiEntry" Placeholder="Emoji"/>
        <Button Text="Save" Clicked="OnSaveClicked"/>
        <Button Text="Cancel" Clicked="OnCancelClicked"/>
    </VerticalStackLayout>
    
</ContentPage>