<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MovieContentPage"
             Title="MovieContentPage">
    <VerticalStackLayout Padding="20">
        <Label Text="Title" FontSize="Large" FontAttributes="Bold"/>
        <Label Text="Year" FontSize="Medium"/>
        <Label Text="Director" FontSize="Medium"/>
        <Label Text="Genre" FontSize="Medium"/>
        <Label Text="Rating" FontSize="Medium"/>
        <Label Text="Emoji" FontSize="Medium"/>

        <Button Text="Mark as Favourite" Clicked="Back_Clicked"/>
        <Button Text="Back" Clicked="Back_Clicked"/>
    </VerticalStackLayout>
</ContentPage>