<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MovieContentPage"
             Title="MovieContentPage">
    <VerticalStackLayout Padding="20">
        
        <Label Text="{Binding title}" FontSize="50"/>
            <Label Text="{Binding year}" FontSize="20"/>
            <Label Text="{Binding director}" FontSize="20"/>
            <Label Text="{Binding rating}" FontSize="20"/>
            <Label Text="{Binding emoji}" FontSize="20"/>
        <Label Text="{Binding GenresDisplay}" FontSize="20"/>

        <Button Text="Mark as Favourite" Clicked="Back_Clicked"/>
        <Button Text="Back" Clicked="Back_Clicked"/>
    </VerticalStackLayout>
</ContentPage>