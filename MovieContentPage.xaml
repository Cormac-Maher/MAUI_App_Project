<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.MovieContentPage"
             Title=""
             BackgroundColor="{DynamicResource AppBackgroundColor}"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>

        <VerticalStackLayout Padding="20">

            <Label Text="{Binding title}" FontSize="50"/>
            <Label Text="{Binding year}" FontSize="20"/>
            <Label Text="{Binding director}" FontSize="20"/>
            <Label Text="{Binding rating}" FontSize="20"/>
            <Label Text="{Binding emoji}" FontSize="20"/>
            <Label Text="{Binding genresDisplay}" FontSize="20"/>
            <Label x:Name="FavouriteTimestamp" FontSize="20"/>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <ImageButton x:Name="FavouriteButton2" HorizontalOptions="Center" BorderColor="Transparent" Clicked="Favourite_Clicked" WidthRequest="200" HeightRequest="200" Source="fullheart.png" />
                <ImageButton Source="back.png" Clicked="Back_Clicked" BackgroundColor="Red" BorderColor="Black" WidthRequest="200" HeightRequest="200"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
        </ScrollView>

</ContentPage>   