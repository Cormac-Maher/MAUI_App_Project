<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MovieExplorer.FavouritesPage"
             Title=""
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{DynamicResource AppBackgroundColor}">
    
    <ScrollView>
        <VerticalStackLayout
         Padding="30,0"
         Spacing="25">

            <SearchBar x:Name="MovieSearchBar"
        Placeholder="Search favourite movies..."
        TextChanged="OnSearch"
        TextColor="White"
        PlaceholderColor="LightGray" />

            <HorizontalStackLayout HorizontalOptions="Center">
                <ImageButton Source="back.png" Clicked="Back_Clicked" BackgroundColor="Red" BorderColor="Black" WidthRequest="32" HeightRequest="32"/>
                
                <Label 
                 Text="Welcome to your favourites page"
                 FontSize="40"
                 TextColor="White"/>
            </HorizontalStackLayout>

            <Grid x:Name="GridPageContent"
               RowSpacing="10"
               ColumnSpacing="10"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            </Grid>

            <Button Text="Back" Clicked="Back_Clicked" BackgroundColor="Red" TextColor="Black" BorderColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>